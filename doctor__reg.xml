<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20sp"
    android:paddingLeft="15sp"
    android:paddingRight="15sp"
    android:paddingBottom="15sp"
    tools:context="com.example.arkac.myapplication.Doctor_Reg">

    <EditText
        android:layout_width="match_parent"
        android:hint="@string/password"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:paddingTop="15sp"
        android:ems="10"
        android:id="@+id/pass_word"
        android:layout_below="@+id/u_name"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="15sp"
        android:inputType="textPersonName"
        android:hint="@string/Reg"
        android:ems="10"
        android:id="@+id/register"
        android:layout_below="@+id/name"
        android:layout_alignStart="@+id/u_name"
        android:layout_above="@+id/u_name" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:inputType="textPersonName"
        android:hint="@string/FN"
        android:paddingTop="15sp"
        android:ems="10"
        android:id="@+id/name"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/register" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:hint="@string/Address"
        android:paddingTop="15sp"
        android:ems="10"
        android:id="@+id/address"
        android:layout_below="@+id/cnfrm_p"
        android:layout_alignStart="@+id/cnfrm_p" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15sp"
        android:inputType="number"
        android:hint="@string/Contact_no"
        android:ems="10"
        android:id="@+id/contact_number"
        android:layout_below="@+id/address"
        android:layout_alignStart="@+id/address" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="@string/cnfrm"
        android:paddingTop="15sp"
        android:ems="10"
        android:id="@+id/cnfrm_p"
        android:layout_below="@+id/pass_word"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:hint="@string/Mail_id"
        android:paddingTop="15sp"
        android:ems="10"
        android:id="@+id/mail"
        android:layout_below="@+id/contact_number"
        android:layout_alignStart="@+id/contact_number" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="@string/username"
        android:paddingTop="15sp"
        android:ems="10"
        android:id="@+id/u_name"
        android:layout_below="@+id/name"
        android:layout_alignParentStart="true" />


    <Button
        android:text="@string/Submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dsubmit"
        android:onClick="addDoctor"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/register" />

    <Spinner
        android:layout_width="match_parent"
        android:paddingTop="15sp"
        android:layout_height="wrap_content"
        android:id="@+id/po"
        android:layout_below="@+id/mail"
        android:layout_alignParentStart="true" />

</RelativeLayout>
