<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="20sp"
    tools:context="com.example.arkac.myapplication.Hospital_Reg">


    <EditText
        android:layout_width="wrap_content"
        android:hint="@string/password"
        android:layout_height="wrap_content"
        android:paddingTop="15sp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/pass_word"
        android:layout_below="@+id/u_name"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/u_name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:paddingTop="15sp"
        android:hint="@string/Address"
        android:ems="10"
        android:id="@+id/address"
        android:layout_below="@+id/cnfrm_p"
        android:layout_alignStart="@+id/cnfrm_p"
        android:layout_alignEnd="@+id/cnfrm_p" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="15sp"
        android:inputType="number"
        android:hint="@string/Contact_no"
        android:ems="10"
        android:id="@+id/contact_number"
        android:layout_below="@+id/address"
        android:layout_alignStart="@+id/address"
        android:layout_alignEnd="@+id/address" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="15sp"
        android:inputType="textPassword"
        android:hint="@string/cnfrm"
        android:ems="10"
        android:id="@+id/cnfrm_p"
        android:layout_below="@+id/pass_word"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/pass_word" />


    <Button
        android:text="@string/Submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        android:onClick="addHospital"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="37dp" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:paddingTop="15sp"
        android:hint="@string/hname"
        android:ems="10"
        android:id="@+id/hname"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="15sp"
        android:hint="@string/username"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/u_name"
        android:layout_below="@+id/hname"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/hname" />


</RelativeLayout>
