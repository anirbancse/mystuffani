<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#76A1DB"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Login">

    <Button
        android:text="@string/register"
        android:onClick="Register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reg"
        android:layout_marginEnd="49dp"
        android:layout_alignTop="@+id/log"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/username"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/editLogin"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="42dp" />

    <EditText
        android:layout_width="wrap_content"
        android:hint="@string/pass"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editPass"
        android:layout_alignStart="@+id/editLogin"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/editLogin" />

    <Button
        android:text="@string/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="Login"
        android:id="@+id/log"
        android:layout_marginBottom="48dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/doctor" />



    <CheckBox
        android:text="@string/Patient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onCHECKED"
        android:checked="false"
        android:id="@+id/patient"
        android:layout_below="@+id/editPass"
        android:layout_alignParentStart="true"
        android:layout_marginTop="53dp" />

    <CheckBox
        android:text="@string/Doctor"
        android:checked="false"
        android:onClick="onCHECKED"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/patient"
        android:id="@+id/doctor"
        android:layout_below="@+id/patient" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onCHECKED"
        android:text="@string/Hospital"
        android:id="@+id/hospital"
        android:layout_below="@+id/doctor"
        android:layout_alignStart="@+id/doctor" />


</RelativeLayout>
