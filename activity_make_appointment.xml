<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#86D6A4"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.arkac.myapplication.Make_appointment">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15sp"
        android:hint="@string/FirstName"
        android:ems="10"
        android:id="@+id/Fname"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />



    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Lname"
        android:paddingTop="15sp"
        android:hint="@string/LastName"
        android:layout_below="@+id/Fname"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:hint="@string/time"
        android:paddingTop="15sp"
        android:ems="10"
        android:id="@+id/time"
        android:layout_below="@+id/doctorname"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:hint="@string/Date"
        android:paddingTop="15sp"
        android:ems="10"
        android:id="@+id/date"
        android:layout_below="@+id/time"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mA"
        android:onClick="registered"
        android:textColor="@color/green"
        android:id="@+id/Save"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/catagory"
        android:layout_below="@+id/Lname"
         />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/doctorname"
        android:layout_below="@+id/catagory"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/chamber"
        android:layout_below="@+id/date"
        android:layout_alignParentStart="true" />




</RelativeLayout>
