<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20sp"
    android:paddingLeft="15sp"
    android:paddingRight="15sp"
    tools:context="com.example.arkac.myapplication.Patient_Reg">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="@string/password"
        android:paddingTop="15sp"
        android:ems="10"
        android:id="@+id/pass_word"
        android:layout_below="@+id/u_name"
        android:layout_alignStart="@+id/u_name"
        android:layout_alignEnd="@+id/u_name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:paddingTop="15sp"
        android:ems="10"
        android:hint="@string/LastName"
        android:id="@+id/l_name"
        android:layout_below="@+id/f_name"
        android:layout_alignStart="@+id/u_name"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:paddingTop="15sp"
        android:hint="@string/FirstName"
        android:ems="10"
        android:id="@+id/f_name"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/l_name"
        android:layout_alignParentEnd="true" />



    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="@string/Contact_no"
        android:paddingTop="15sp"
        android:ems="10"
        android:id="@+id/contact_number"
        android:layout_below="@+id/cnfrm_p"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/cnfrm_p" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="@string/cnfrm"
        android:paddingTop="15sp"
        android:ems="10"
        android:id="@+id/cnfrm_p"
        android:layout_below="@+id/pass_word"
        android:layout_alignStart="@+id/pass_word"
        android:layout_alignEnd="@+id/pass_word" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:paddingTop="15sp"
        android:id="@+id/mail"
        android:hint="@string/Mail_id"
        android:layout_below="@+id/contact_number"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/contact_number" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="@string/username"
        android:paddingTop="15sp"
        android:ems="10"
        android:id="@+id/u_name"
        android:layout_below="@+id/l_name"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="@string/Submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        android:onClick="addUser"
        android:layout_marginBottom="46dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />



</RelativeLayout>
